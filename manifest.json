{
  "manifest_version": 3,
  "name": "LeetCode Mentor",
  "version": "1.0",
  "description": "AI-powered hints and solutions for LeetCode problems.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "https://leetcode.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
